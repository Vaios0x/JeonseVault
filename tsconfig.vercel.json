{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/typechain-types": ["./typechain-types"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "typechain-types/**/*.ts"
  ],
  "exclude": ["node_modules", "contracts/**/*.sol"]
}
